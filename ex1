#include <stdio.h>
#include <stdlib.h>

#define ROZMIAR 20

int main(void){
    int index;
    int linia[ROZMIAR];
    
    system("clear");
//inicjalizacja
    for(index = 0; index < ROZMIAR; index++)
    linia[index] = ROZMIAR - index;
    
//PrzykÅ‚adowe wypisanie tablicy
    for(index = 0; index < ROZMIAR; index++)
        printf("linia[%2d] = %3d\n", index, linia[index]);
        
        return EXIT_SUCCESS;
}
